{
  "name": "@topology/core",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Core engine for code topology analysis - AST parsing, Git diff, graph building",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./git": {
      "types": "./dist/git/index.d.ts",
      "import": "./dist/git/index.js"
    },
    "./parser": {
      "types": "./dist/parser/index.d.ts",
      "import": "./dist/parser/index.js"
    },
    "./graph": {
      "types": "./dist/graph/index.d.ts",
      "import": "./dist/graph/index.js"
    },
    "./reporter": {
      "types": "./dist/reporter/index.d.ts",
      "import": "./dist/reporter/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch"
  },
  "dependencies": {
    "@topology/protocol": "workspace:*",
    "glob": "^11.0.0",
    "simple-git": "^3.27.0",
    "tree-sitter": "^0.21.1",
    "tree-sitter-javascript": "^0.21.0",
    "tree-sitter-python": "^0.21.0",
    "tree-sitter-typescript": "^0.23.2"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "typescript": "^5.7.0"
  }
}
